<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FAFAFA" />
            <stroke
                android:width="2dp"
                android:color="#0090FF" />

            <padding
                android:left="20dp"
                android:right="20dp"
                android:top="10dp"
                android:bottom="10dp" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FAFAFA" />
            <stroke
                android:width="3dp"
                android:color="#0090FF" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>