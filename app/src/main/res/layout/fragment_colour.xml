<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/colorlayout"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_above="@+id/colortext"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-174dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        tools:ignore="UselessLeaf"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/colortext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/colorbtn"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/colorbtn"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/colour"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/textviewcustom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableEnd="@drawable/copy"
        app:layout_constraintTop_toBottomOf="@+id/colorlayout"
        android:drawableRight="@drawable/copy" />

    <Button
        android:id="@+id/colorbtn"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/buttonshape"
        android:text="RANDOM COLOUR"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/colortext"
        app:layout_constraintStart_toStartOf="@+id/colortext"
        app:layout_constraintTop_toBottomOf="@+id/colortext" />
    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewcolour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2392738236072166/6998738958"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>